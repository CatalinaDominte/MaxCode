@model ClinicManagement.Core.ViewModel.PetDetailViewModel





<div class="container bg-light">
    <div class="py-5 text-center">
    </div>
    @*<div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>*@

    <div class="row modal-body">
        <div class="col-md-4 order-md-2 mb-4">
            <h4 class="d-flex justify-content-between align-items-center mb-3">
                <span class="text-muted">Pet</span>

            </h4>
            
            <ul class="list-group mb-3">
                <li class="list-group-item d-flex justify-content-between">
                    <span>Cod Identificate:</span>
                    <strong>@Model.Pet.Token</strong>
                </li>

                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0"> Proprietar</h6>
                        <small class="text-muted">@Model.Pet.OwnerName</small>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Telefon</h6>
                        <small class="text-muted">@Model.Pet.Phone</small>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between lh-condensed">
                    <div>
                        <h6 class="my-0">Data</h6>
                        <small class="text-muted">@Model.Pet.DateTime.ToString("MMM"), @Model.Pet.DateTime.ToString("d ")- @Model.Pet.DateTime.ToString("yyyy")-@Model.Pet.DateTime.ToString("HH:mm")</small>
                    </div>
                </li>
                <li class="list-group-item d-flex justify-content-between bg-light">
                    <div class="text-success">
                        <h6 class="my-0">Adresa</h6>
                        <small>@Model.Pet.Address</small>
                    </div>
                </li>
            </ul>

        </div>
        <div class="col-md-8 order-md-1">
            <h4 class="mb-3">Consultatie</h4>
            <div class="row">
                <table  class="table table-bordered table-hover dataTables">
                    <thead>
                        <tr>
                            <th class="col-md-4 mb-2">Observatii clinice</th>
                            <th class="col-md-4 mb-2">Diagnostic</th>
                            <th class="col-md-4 mb-2">Diagnostic secundar</th>
                            <th class="col-md-4 mb-2">Dignostic multiplu</th>
                            <th class="col-md-4 mb-2">Tratament</th>
                            <th class="col-md-4 mb-2">Data</th>
                            <th class="col-md-4 mb-2">Doctor</th>
                        </tr>
                    </thead>
                    <tbody>


                        @foreach (var item in Model.OpdAttendances)
                        {
                            <tr>
                                <td>@item.ClinicRemarks</td>
                                <td>@item.Diagnosis</td>
                                <td>@item.SecondDiagnosis</td>
                                <td>@item.ThirdDiagnosis</td>
                                <td>@item.Therapy</td>
                                <td>@item.Date.ToString("d")</td>
                                <td>@Model.Pet.Doctor.Name</td>

                            </tr>


                        }
                    </tbody>

                </table>

            </div>

        </div>

    </div>
    <div class="modal-footer">
        <div class="row ">
            <div class="col-xs-12">
                <a href="@Url.Action("Edit", "Pets", new { id= Model.Pet.Id})" class="btn btn-primary"><i class="fa fa-edit fa-fw"></i>Editare Pet</a>

                <a href="@Url.Action("Create", "OpdAttendances", new { id =Model.Pet.Id})" class="btn btn-primary"><i class="fa fa-edit fa-fw"></i> Adauga reteta</a>
                <button type="button" class="btn btn-secondary" data-dismiss="modal"> Inchide</button>

            </div>
        </div>
    </div>

</div>

<script>

         $('.dataTables').DataTable({
             "scrollY": "300px",
             "scrollCollapse": true,
             "paging": false,
             "filter": false,
             "info": false
         });


</script>
